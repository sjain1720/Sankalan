<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.selected_event">



    <ScrollView
        android:layout_width="410dp"
        android:layout_height="603dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="254dp"
                tools:srcCompat="@tools:sample/avatars" />
            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_marginStart="35dp"
                android:text="event_name"
                android:textColor="@color/royal_purple"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="About"
                android:textColor="@color/royal_purple"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/about_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="About this event
hgvkjbvkjvnkdfjn
jdsbjksdbkjsndkjnkj
sdhbkjsdbkjsdbckjsnm
gckjsdbckjsdbckjsd"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Rules"
                android:textColor="@color/royal_purple"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rules_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="rules of selected event
jjfejfokf
jfjfkjfkmfk
hkfjkjfkmfkmk"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="401dp"
        android:layout_height="104dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:text="Register"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="611dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
